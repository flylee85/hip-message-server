<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>install</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/config</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/instruction</directory>
			<outputDirectory>instruction</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/readme/sql</directory>
			<outputDirectory>sql</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/readme/doc</directory>
			<outputDirectory>doc</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/scrpit</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/${artifactId}</directory>
			<includes><!--此处填写jar包名称，项目生成的jar包名称是什么，这里就填什么 -->
				<!--<include>${artifactId}_${version}_${maven.build.timestamp}-exec.jar</include>-->
				<include>${artifactId}-exec.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>

